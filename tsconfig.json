{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "es2015"],
    "rootDir": "./src"
  },
  "include": ["src/**/*", "mocks/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
